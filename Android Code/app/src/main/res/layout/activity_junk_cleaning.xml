<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <View
        android:id="@+id/headerBg"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#2196F3"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:padding="12dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Cleaner"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintTop_toTopOf="@id/btnBack" />

    <!-- Radar UI Area - Semi-circle Effect -->
    <FrameLayout
        android:id="@+id/radarContainer"
        android:layout_width="380dp"
        android:layout_height="380dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/radar_background" />

        <ImageView
            android:id="@+id/radarSweep"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/radar_sweep" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvScanStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="Scanning..."
                android:textColor="@android:color/white"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTotalValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="0.0"
                    android:textColor="@android:color/white"
                    android:textSize="70sp" />

                <TextView
                    android:id="@+id/tvTotalUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="4dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="MB"
                    android:textColor="@android:color/white"
                    android:textSize="22sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvCurrentPath"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:ellipsize="middle"
                android:gravity="center"
                android:maxLines="1"
                android:text="/storage/emulated/0/..."
                android:textColor="#CCFFFFFF"
                android:textSize="14sp" />
        </LinearLayout>
    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/listCard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="-40dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerBg">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewJunk"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="100dp"
            android:paddingTop="12dp" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/btnCleanUp"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/button_background_blue"
        android:elevation="4dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tvBtnMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Clean up 0.0 MB"
            android:textColor="@android:color/white"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-3dp"
            android:alpha="0.9"
            android:text="Safe to clean"
            android:textColor="@android:color/white"
            android:textSize="11sp" />

    </LinearLayout>

    <!-- Cleaning Overlay -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cleaningOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1E70FF"
        android:elevation="20dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBackCleaning"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="40dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="12dp"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@android:color/white" />

        <TextView
            android:id="@+id/overlayTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Junk Clean"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/btnBackCleaning"
            app:layout_constraintStart_toEndOf="@id/btnBackCleaning"
            app:layout_constraintTop_toTopOf="@id/btnBackCleaning" />

        <!-- Animation Center -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Cleaning Anim -->
            <LinearLayout
                android:id="@+id/cleaningContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <FrameLayout
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:padding="20dp">
                    
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0.3"
                        android:background="@drawable/radar_background" />

                    <ImageView
                        android:id="@+id/ivBroom"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_broom_clean" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Cleaning..."
                    android:textColor="@android:color/white"
                    android:textSize="22sp" />

            </LinearLayout>

            <!-- Success Container -->
            <LinearLayout
                android:id="@+id/successContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/ivSuccessCheck"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:src="@drawable/ic_big_check_white" />

                <TextView
                    android:id="@+id/tvCleanedAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:fontFamily="sans-serif-black"
                    android:text="0.0 MB cleaned"
                    android:textColor="@android:color/white"
                    android:textSize="26sp" />

            </LinearLayout>

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
