<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer Glow/Ring -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#20FFA000"/>
        </shape>
    </item>
    
    <!-- Main Button -->
    <item android:bottom="20dp" android:top="20dp" android:left="20dp" android:right="20dp">
        <shape android:shape="oval">
             <gradient
                android:startColor="#FFB74D"
                android:centerColor="#FB8C00"
                android:endColor="#EF6C00"
                android:angle="135"
                android:type="linear"/>
            <stroke android:width="1dp" android:color="#FFFFFF33"/>
        </shape>
    </item>
</layer-list>
