<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="360"
    android:toDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%">
    <shape
        android:shape="ring"
        android:innerRadiusRatio="3.8"
        android:thicknessRatio="50"
        android:useLevel="false">
        <gradient
            android:type="sweep"
            android:startColor="#0064B5F6"
            android:centerColor="#8064B5F6"
            android:endColor="#64B5F6" />
    </shape>
</rotate>
