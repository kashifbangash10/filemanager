<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer faint ring -->
    <item>
        <shape android:shape="oval">
            <stroke android:width="1dp" android:color="#0DFFFFFF"/>
            <size android:width="280dp" android:height="280dp"/>
        </shape>
    </item>
    <!-- Middle faint ring -->
    <item android:top="40dp" android:bottom="40dp" android:left="40dp" android:right="40dp">
         <shape android:shape="oval">
            <stroke android:width="1dp" android:color="#1AFFFFFF"/>
        </shape>
    </item>
    <!-- Inner faint ring -->
     <item android:top="80dp" android:bottom="80dp" android:left="80dp" android:right="80dp">
         <shape android:shape="oval">
            <stroke android:width="1dp" android:color="#26FFFFFF"/>
        </shape>
    </item>
    <!-- Solid core glow -->
    <item android:top="110dp" android:bottom="110dp" android:left="110dp" android:right="110dp">
        <shape android:shape="oval">
            <solid android:color="#12FFFFFF"/>
        </shape>
    </item>
</layer-list>
