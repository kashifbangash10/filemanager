<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_cleaner_main_background">

    <!-- Circle Button -->
    <FrameLayout
        android:id="@+id/circle_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/junk_text_container"
        app:layout_constraintVertical_bias="0.4">

        <!-- Use a View for the ring visualization -->
        <View
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:background="@drawable/bg_cleaner_circle_button"
            android:alpha="0.2"
            android:scaleX="1.15"
            android:scaleY="1.15"
            android:layout_gravity="center"/>
            
        <View
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:background="@drawable/bg_cleaner_circle_button"
            android:alpha="0.4"
            android:scaleX="1.05"
            android:scaleY="1.05"
            android:layout_gravity="center"/>

        <LinearLayout
            android:id="@+id/btn_clean_action"
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:background="@drawable/bg_cleaner_circle_button"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:elevation="10dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CLEAN"
                android:textColor="#FFFFFF"
                android:textSize="36sp"
                android:textStyle="bold"
                android:letterSpacing="0.05"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap To View"
                android:textColor="#FFF3E0"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </FrameLayout>

    <!-- Junk Text -->
    <LinearLayout
        android:id="@+id/junk_text_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/circle_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/scroll_container"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp">

        <TextView
            android:id="@+id/text_junk_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="590 KB"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#424242"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="junk found"
            android:textSize="24sp"
            android:textColor="#9E9E9E"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scroll_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/junk_text_container"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/options_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_cleaner_card"
                android:paddingVertical="8dp"
                android:elevation="2dp">

                <!-- Storage Manager -->
                <include layout="@layout/item_cleaner_option" android:id="@+id/option_storage"/>
                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F5F5F5" android:layout_marginStart="72dp"/>

                <!-- Duplicate Files -->
                <include layout="@layout/item_cleaner_option" android:id="@+id/option_duplicate"/>
                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F5F5F5" android:layout_marginStart="72dp"/>

                <!-- Large Files -->
                <include layout="@layout/item_cleaner_option" android:id="@+id/option_large"/>
                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F5F5F5" android:layout_marginStart="72dp"/>
                
                <!-- App Manager -->
                <include layout="@layout/item_cleaner_option" android:id="@+id/option_apps"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
