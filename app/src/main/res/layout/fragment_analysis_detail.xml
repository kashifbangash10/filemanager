<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:attr/windowBackground">

    <!-- Header summary at the top -->
    <LinearLayout
        android:id="@+id/header_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5F5F5"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/summary_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Duplicate files: 0  Size: 0 B"
            android:textColor="#9E9E9E"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- RecyclerView for items -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:padding="4dp" />

    <!-- Old bottom bar removed as it overlaps with cleaner bar -->

    <!-- Cleaner Mode Bottom Bar -->
    <LinearLayout
        android:id="@+id/cleaner_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="#FFFFFF"
        android:elevation="16dp">

        <TextView
            android:id="@+id/storage_info_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"
            android:gravity="center"
            android:text="Available: --  Total: --"
            android:textSize="12sp"
            android:textColor="#757575"
            android:background="#F5F5F5"/>

        <Button
            android:id="@+id/btn_cleaner_action"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="12dp"
            android:text="Clean up 0 B"
            android:backgroundTint="#E0E0E0"
            android:textColor="#757575"
            android:textStyle="bold"
            android:enabled="false"/>
    </LinearLayout>

</LinearLayout>
